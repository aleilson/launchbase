{% extends "layout.njk" %}

{% block head %}
    <title>Receitas - Foodfy</title>
{% endblock head %}

{% block content %}

    <section class="receitas">
        <div class="container">
            <div class="receitas__thumb">
                <div class="receitas__boxes">

                    {% for recipe in recipes %}

                        <div class="receitas__card" id="{{recipe.id}}">
                            <figure class="receitas__img">
                                <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
                            </figure>
                            <strong class="receitas__subtitle">{{ recipe.title }}</strong>
                            <p class="receitas__author">{{ recipe.author }}</p>
                        </div>
                    
                    {% endfor %}

                </div>
            </div>

            <div class="pagination" 
                data-page={{pagination.page}} 
                data-total={{pagination.total}}
                data-filter={{pagination.filter}}>
            </div>

        </div>
    </section>
{% endblock  content %}