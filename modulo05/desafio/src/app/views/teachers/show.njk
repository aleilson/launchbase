{% extends 'layout.njk' %}

{% block content %}
    <section class="card">
        <div class="image" style="background: url({{ teacher.avatar_url }}) no-repeat"></div>
        <div class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome completo</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.age }}</div>
            </div>

            <div class="item">
                <div>Grau de escolaridade (ex.: Doutorado)</div>
                <div>{{ teacher.education_level }}</div>
            </div>

            <div class="item">
                <div>Tipo de aula (presencial ou à distância)</div>
                <div>{{ teacher.class_type }}</div>
            </div>

            <div class="item">
                <div>Acompanhamento (ex.: Matemática e Física)</div>
                <div>
                    {% for subjects_taught in teacher.subjects_taught %}
                        <span>{{ subjects_taught }}</span>
                    {% endfor %}
                </div>
            </div>
            
            <div class="item">
                <div>Desde (data de cadastro na plataforma)</div>
                <div>{{ teacher.created_at }}</div>
            </div>


            <a class="button" href="/teachers/{{teacher.id}}/edit">Editar</a>
        </div>
    </section>
{% endblock content %}