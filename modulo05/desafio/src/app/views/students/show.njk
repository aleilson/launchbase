{% extends 'layout.njk' %}

{% block content %}
    <section class="card">
        <div class="image" style="background: url({{ student.avatar_url }}) no-repeat"></div>
        <div class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome completo</div>
                <div>{{ student.name }}</div>
            </div>

            <div class="item">
                <div>Anviversário</div>
                <div>{{ student.age }}</div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>{{ student.email }}</div>
            </div>

            <div class="item">
                <div>Ano escolar</div>
                <div>{{ student.school_year }}</div>
            </div>

            <div class="item">
                <div>Carga horária semanal</div>
                <div>{{student.school_load}}</div>
            </div>

            <div class="item">
                <div>Desde (data de cadastro na plataforma)</div>
                <div>{{ student.created_at }}</div>
            </div>

            <div class="item">
                <div>Aluno de</div>
                <div>{{ student.teacher_name }}</div>
            </div>

            


            <a class="button" href="/students/{{student.id}}/edit">Editar</a>
        </div>
    </section>
{% endblock content %}