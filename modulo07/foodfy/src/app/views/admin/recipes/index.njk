{% extends "layout.njk" %}

{% block head %}
    <title>Administração - Foodfy</title>
{% endblock head %}

{% block navbar %}
    {% include 'parts/navbar-admin.njk'%}   
{% endblock navbar %}

{% block content %}
    <section class="recipes">
        <div class="container">
            <div class="recipes__thumb">
            
                <div class="box_header">
                    {% if session.adm == true %}
                        <a class="button" href="/admin/recipes/create">Criar receita</a>
                    {% endif %}
                </div>
                <div class="recipes__boxes">

                    {% for recipe in recipes %}

                    <div class="recipes__card" id="{{recipe.id}}">
                        <figure class="recipes__img">
                            {% for file in recipesFiles %}
                                {% if file.recipe_id == recipe.id %}
                                    <img src="{{ file.src }}" alt="{{ file.name }}">
                                {% endif %}
                            {% endfor %}
                        </figure>
                        <div class="recipes__card-details">
                            <p class="recipes__card-title">{{ recipe.title }}</p>
                            <p class="recipes__card-author">Por {{ recipe.chef_name }} </p>
                            <a href="/admin/recipes/{{recipe.id}}" class="recipes__card-button">Visualizar</a>
                        </div>
                    </div>

                    {% endfor %}

                </div>
            </div>
        </div>
    </section>
{% endblock  content %}