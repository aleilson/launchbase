<div class="item">
    <span>E-mail</span>
    <div class="input">
        <input 
            type="email"
            name="email"
            placeholder="Digite seu email"
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')"

        >
    </div>
</div>

<div class="item">
    <span>Senha</span>
    <div class="input">
        <input 
            type="password"
            name="password"
            placeholder="Digite uma nova senha"
        >
    </div>
</div>

<div class="item">
    <span>Repitição da Senha</span>
    <div class="input">
        <input 
            type="password"
            name="passwordRepeat"
            placeholder="Repita sua nova senha"
        >
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">