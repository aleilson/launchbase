{% extends 'layout.njk' %}

{% block navbar %}
    <header class="header">
        <div class="container">
            <div class="navbar">
                <h1 class="navbar__logo navbar-login">
                    <img src="../../../../img/logo.png" alt="Foodfy">
                </h1>
            </div>
        </div>
    </header>
{% endblock navbar %}

{% block content %}

    <section class="login form">
        <div class="container">
            <form class="card" method="POST" action="/admin/forgot-password">

                <div class="header">
                    <h3>Esqueceu a senha?</h3>
                </div>

                <div class="fields">
                    <div class="item">
                        <span>E-mail</span>
                        <div class="input">
                            <input 
                                type="email"
                                name="email"
                                placeholder="Digite o email cadastrado"
                                value="{{user.email}}"
                                onblur="Validate.apply(this, 'isEmail')"

                            >
                        </div>
                    </div>
                </div>

                <div class="item access right">
                    <button class="button" type="submit">Recuperar</button>
                </div>

            </form>
        </div>
    </section>

{% endblock  content %}
