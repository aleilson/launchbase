{% extends 'layout.njk' %}

{% block navbar %}
    <header class="header">
        <div class="container">
            <div class="navbar">
                <h1 class="navbar__logo navbar-login">
                    <img src="../../../../img/logo.png" alt="Foodfy">
                </h1>
            </div>
        </div>
    </header>
{% endblock navbar %}

{% block content %}

    <section class="login form">
        <div class="container">
            <form class="card" method="POST" action="/admin/password-reset">

                <div class="header">
                    <h3>Nova senha</h3>
                </div>

                {% include 'admin/session/reset-fields.njk' %}

                <div class="item access right">
                    <button class="button" type="submit">Nova senha</button>
                </div>

            </form>
        </div>
    </section>

{% endblock  content %}
