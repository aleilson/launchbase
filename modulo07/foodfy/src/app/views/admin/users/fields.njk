<div class="flex">
    <div class="item">
        <span>Nome</span>
        <input 
            type="text" 
            name="name" 
            value="{{ user.name }}"
            placeholder="Digite o nome completo"
        >
    </div>

    <div class="item">
        <span>E-mail</span>
        <div class="input">
            <input 
                type="email"
                name="email"
                placeholder="Digite o email cadastrado"
                value="{{user.email}}"
                onblur="Validate.apply(this, 'isEmail')"
            >
        </div>
    </div>
</div>

<div class="item checkbox">
    {# <input 
        type="checkbox" 
        name="is_admin" 
        id="check"
    > #}
     <input 
        type="checkbox" 
        name="is_admin" 
        id="is_admin"
        {% if user.is_admin %}
        checked
        {% endif %}
    >
    <label for="is_admin">Administrador</label>
</div>



