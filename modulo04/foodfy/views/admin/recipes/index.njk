{% extends "layout.njk" %}

{% block head %}
    <title>Administração - Foodfy</title>
{% endblock head %}

{% block navbar %}
    <header class="bg-black">
        <div class="container">
        
            <div class="navbar bg-black">
                <h1 class="navbar__logo">
                    <a href="/admin/recipes" >                    
                        <img src="../../img/logo-white.png" alt="Foodfy">
                    </a>
                </h1>
            </div>
        
        </div>
    </header>
{% endblock navbar %}

{% block content %}
    <section class="recipes">
        <div class="container">
            <div class="recipes__thumb">
            
                <div class="box_header">
                    <a class="button" href="/admin/recipes/create">Criar receita</a>
                </div>
                <div class="recipes__boxes">

                    {% for receita in receitas %}

                    <div class="recipes__card" id="{{receita.id}}">
                        <figure class="recipes__img">
                            <img src="{{ receita.recipes_url }}" alt="{{ receita.name }}">
                        </figure>
                        <div class="recipes__card-details">
                            <p class="recipes__card-title">{{ receita.name }}</p>
                            <p class="recipes__card-author">Por {{ receita.author }}</p>
                            <a href="/admin/recipes/{{receita.id}}" class="recipes__card-button">Visualizar</a>
                        </div>
                    </div>

                    {% endfor %}

                </div>
            </div>
        </div>
    </section>
{% endblock  content %}