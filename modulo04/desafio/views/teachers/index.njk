{% extends 'layout.njk' %}

{% block content %}
    <section class="card table-container">
        <a href="/teachers/create">Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Instrutor</th>
                    <th>Atendimento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                <tr>
                    <td>
                        <span style="background-image: url({{teacher.avatar_url}})"></span>
                        {{teacher.name}}
                    </td>
                    <td>{{teacher.area_occupation}}</td>
                    <td><a href="/teachers/{{teacher.id}}">VER</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock content %}