            
    <div class="item">
        <div>Avatar URL</div>
        <div>
            <input 
                type="url"
                name="avatar_url"
                placeholder="http://"
                value="{{ teacher.avatar_url }}"
            >
        </div>
    </div>

    <div class="item">
        <div>Nome do Professor</div>
        <div>
            <input 
                type="text"
                name="name"
                placeholder="Nome completo"
                value="{{ teacher.name }}"
            >
        </div>
    </div>


    <div class="item">
        <div>Idade</div>
        <div>
            <input 
                type="date"
                name="birth"
                value="{{ teacher.birth }}"
            >
        </div>
    </div>

    <div class="item">
        <div>Grau de escolaridade (ex.: Doutorado)</div>
        <div>
            <select name="school">
                <option 
                    value="Ensino Médio Completo" 
                    {% if teacher.school == 'Ensino Médio Completo' %}
                        selected
                    {% endif %}>Ensino Médio Completo
                </option> 

                <option 
                    value="Ensino Superior Completo" 
                    {% if teacher.school == 'Ensino Superior Completo' %}
                        selected
                    {% endif %} >Ensino Superior Completo
                    </option> 
                <option 
                    value="Mestrado"
                    {% if teacher.school == 'Mestrado' %}
                        selected
                    {% endif %} >Mestrado
                </option> 
                <option 
                    value="Doutorado" 
                    {% if teacher.school == 'Doutorado' %}
                        selected
                    {% endif %}>Doutorado
                </option> 
            </select>
        </div>
    </div>

    <div class="item">
        <div>Tipo de aula (presencial ou à distância)</div>
        <div>
            <span>
                <input 
                    type="radio" 
                    name="type_class" 
                    value="Presencial" 
                    {% if teacher.type_class == 'Presencial' %}
                        checked
                    {% endif %} >Presencial
            </span>
            <span>
                <input 
                    type="radio" 
                    name="type_class" 
                    value="A Distância" 
                    {% if teacher.type_class == 'A Distância' %}
                        checked
                    {% endif %}>À Distância
            </span>
        </div> 
    </div>

    <div class="item">
        <div>Acompanhamento (ex.: Matemática e Física)</div>
        <div>
            <input 
                type="text"
                name="area_occupation"
                value="{{ teacher.area_occupation }}"
            >
        </div>
    </div>

    <button type="submit">Salvar</button>